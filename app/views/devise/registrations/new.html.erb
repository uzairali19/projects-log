<% @page_title = "Sign Up"%>
<section class="section">
  <div class="columns is-centered">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Name",
                wrapper: false,
                input_html: { class: "input is-medium" } %>
        <%= f.input :email,
                required: false,
                label: false,
                placeholder: "Email",
                wrapper: false,
                input_html: { class: "input is-medium" } %>
        <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password", class: "input is-medium" },
                label: false,
                placeholder: "Password " + "#{@minimum_password_length} characters minimum",
                wrapper: false %>
        <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "input is-medium" },
                label: false,
                placeholder: "Confirm Password",
                wrapper: false %>
      </div>
      <div class="control is-centered">
        <%= f.button :submit, "Sign up", class: "button is-medium is-info mt-5 is-centered" %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</section>
<% end %>
